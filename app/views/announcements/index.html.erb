<section class="py-5 aboutwistech">    

<div class="container">

 <% @announcements.each do |announcement| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="row announrow" style="margin-bottom: 30px;">
        <div class="col-lg-4">
          <img src="<%= announcement.announcementimage %>" class="img-fluid imageshadow">
        </div>
        <div class="col-lg-8">
          <h4 style="font-family: 'Raleway', sans-serif; color: #034e31;"><%= announcement.title %></h4>
          <hr align="left" width="10%" class="divederlined">
          <p style="font-family: 'Open Sans', sans-serif; font-weight: 300;"><%= announcement.description %></p>
          <p style="font-family: 'Open Sans', sans-serif; font-weight: 500; font-size: 12px;"><%= announcement.updated_at.strftime("%B %-d, %Y") %>
            <% if signed_in? %>
            <%= link_to ' | Edit', edit_announcement_path(announcement) %>
            <%= link_to ' | Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>


 <% end %>

