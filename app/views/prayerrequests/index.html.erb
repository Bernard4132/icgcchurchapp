<p id="notice"><%= notice %></p>

<h1>Prayerrequests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phonenumber</th>
      <th>Email</th>
      <th>Prayerrequesttext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prayerrequests.each do |prayerrequest| %>
      <tr>
        <td><%= prayerrequest.name %></td>
        <td><%= prayerrequest.phonenumber %></td>
        <td><%= prayerrequest.email %></td>
        <td><%= prayerrequest.prayerrequesttext %></td>
        <td><%= link_to 'Show', prayerrequest %></td>
        <td><%= link_to 'Edit', edit_prayerrequest_path(prayerrequest) %></td>
        <td><%= link_to 'Destroy', prayerrequest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

