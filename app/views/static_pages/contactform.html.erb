<style type="text/css">

.contactus{
	margin-top: 0px;
}

</style>


<section class="contactus">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12">
				<br>
				<h2 style="font-family: 'Raleway', sans-serif; font-weight: 600;">Our Contact</h2>
				<p style="text-align: justify; font-weight: 300; font-size: 16px;">Contact ICGC Virginia beach.</p>
				<p>
                <span><i class="fa fa-phone" aria-hidden="true"></i></span><span style="font-weight: 300; font-size: 16px;"> 757-217-8836</span><br>
                <span><i class="fa fa-envelope" aria-hidden="true"></i></span><span style="font-weight: 300; font-size: 16px;"> hello@icgcvirginiabeach.com</span><br>
                <span><i class="fa fa-map-marker" aria-hidden="true"></i></span><span style="font-weight: 300; font-size: 16px;"> 3824 Virginia Beach Blvd, Virginia Beach, Virginia 23452 </span><br>
				</p>
				<p>
				 <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d408955.77996456315!2d-76.29281508411962!3d36.79534085988782!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89bac1e8fc1527a7%3A0x4161080a32e0173!2sVirginia+Beach%2C+VA%2C+USA!5e0!3m2!1sen!2sgh!4v1537722997160" width="300" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
				</p>
			</div>
			<div class="col-lg-6 col-md-12">
				<br>
				<h3 style="font-family: 'Raleway', sans-serif; font-weight: 600;">Contact Us.</h3>
                 <%= form_for(@contact) do |f| %>
			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
			      <ul>
			      <% @contact.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			   <% if notice %>
			<div class="alert alert-success alert-dismissible" role="alert">
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			  <p class="notice"><%= notice %></p>
			</div>
			<% end %>

		  <div class="form-group">
		    <label style="font-weight: 300; font-size: 14px;">Your Name</label>
		    <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Your Name" %>
		  </div>

		  <div class="form-group">
		    <label style="font-weight: 300; font-size: 14px;">Your Phone number</label>
		    <%= f.text_field :phonenumber, :class => "form-control", :placeholder => "Enter Your Phone Number" %>
		  </div>

		  <div class="form-group">
		    <label style="font-weight: 300; font-size: 14px;">Your Email</label>
		    <%= f.text_field :email, :class => "form-control", :placeholder => "Enter Your Email" %>
		  </div>

		  <div class="form-group">
		    <label style="font-weight: 300; font-size: 14px;">Message for Us</label>
		    <%= f.text_area :message, :class => "form-control", :rows => "5", :placeholder => "Enter Your Message" %>
		  </div>

		  <div class="form-group">
		    <%= f.submit "Submit", :class => "btn btn-primary" %>
		  </div>
		<% end %>


			</div>
		</div>
	</div>
</section>