<div class="container">
<div class="row justify-content-center" style="margin-top: 10px; margin-bottom: 40px;">
  <div class="col-md-8 col-md-offset-2">
<div class="holdformsi">

	<br>
	<h2 style="font-family: 'Raleway', sans-serif; font-weight: 600; text-align: center;">Your Prayer Request</h2>
	<p style="text-align: justify; font-weight: 300; font-size: 16px; text-align: center; margin-bottom: 15px;">Kindly fill up the form with all required information and click submit to send your prayer request.</p>
	
	<%= form_for(@prayerrequest) do |f| %>
  <% if @prayerrequest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prayerrequest.errors.count, "error") %> prohibited this prayerrequest from being saved:</h2>

      <ul>
      <% @prayerrequest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label style="font-weight: 300; font-size: 14px;">Your Name</label>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Your Name"  %>
  </div>

  <div class="field">
    <label style="font-weight: 300; font-size: 14px;">Your Phone number</label>
    <%= f.text_field :phonenumber, :class => "form-control", :placeholder => "Enter Your Phone Number" %>
  </div>

  <div class="field">
    <label style="font-weight: 300; font-size: 14px;">Your Email</label>
    <%= f.text_field :email, :class => "form-control", :placeholder => "Enter Your Email" %>
  </div>

  <div class="field">
    <label style="font-weight: 300; font-size: 14px;">Your Prayer request</label>
    <%= f.text_area :prayerrequesttext, :class => "form-control", :rows => "5", :placeholder => "Enter Your prayer request" %>
  </div>
<br>
  <div class="actions">
    <p style="text-align: center;"><%= f.submit "Submit", :class => "btn btn-lg btn-warning" %></p>
  </div>
<% end %>


</div>
</div>
</div>
</div>